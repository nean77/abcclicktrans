@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<section class="contact-form-area section-bg pt-50 pb-40 fix" data-background="~/assets/img/gallery/section_bg02.jpg">
    <div class="container">
        <div class="col-xl-8 col-lg-9">
            <div class="contact-form-wrapper">
                <section>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="contact-form">
                        <h2>Utwórz nowe konto</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating pb-3">
                            <input asp-for="Input.FirstName" class="form-control" placeholder="Imię" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-floating pb-3">
                            <input asp-for="Input.LastName" class="form-control" placeholder="Nazwisko" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-floating pb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating pb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Hasło" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating pb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Powtórz hasło" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-check pb-3">
                            <input class="form-check-input" asp-for="Input.Supplier" id="supplier" type="checkbox" />
                            <label class="form-check-label" for="supplier">Przewoźnik</label>
                        </div>
                        <div>
                            <button id="registerSubmit" type="submit" class="w-100 pt-2 submit-btn">Zarejestruj</button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}