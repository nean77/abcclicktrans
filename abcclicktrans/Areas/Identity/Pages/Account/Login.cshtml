@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<section class="contact-form-area section-bg pt-50 pb-40 fix" data-background="~/assets/img/gallery/section_bg02.jpg">
    <div class="container">
        <div class="col-xl-8 col-lg-9">
            <div class="contact-form-wrapper">
                <section>
                    <form id="account" method="post" class="contact-form">
                        <h2>Logowanie</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating pb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating pb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Hasło" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 submit-btn">Zaloguj</button>
                        </div>
                        <div>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-secondary">Nie pamiętasz hasła?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-secondary">Zarejestruj się.</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
