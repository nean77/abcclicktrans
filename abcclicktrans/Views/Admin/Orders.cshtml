@using abcclicktrans.Data.Models
@using System.Linq
@model IEnumerable<abcclicktrans.ViewModels.TransportOrderViewModel>
@{
    ViewData["Title"] = "Zlecenia";
    Layout = "~/Views/Admin/_Layout.cshtml";
}
<h1 class="h3 mb-3">Zlecenia</h1>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header"></div>
            
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>@Html.DisplayNameFor(Model=>Model.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(Model=>Model.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(Model=>Model.FirstOrDefault().Description)</th>
                    <th>Id użytkownika</th>
                    <th>@Html.DisplayNameFor(Model=>Model.FirstOrDefault().IPaddress)</th>
                    <th>@Html.DisplayNameFor(Model=>Model.FirstOrDefault().CreateDateTime)</th>
                    <th>Usuń</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var orderViewModel in Model)
                {
                    <tr>
                        <td>@orderViewModel.Id</td>
                        <td>@orderViewModel.Name</td>
                        <td>@orderViewModel.Description</td>
                        <td>@orderViewModel.User.Id</td>
                        <td>@orderViewModel.IPaddress</td>
                        <td>@orderViewModel.CreateDateTime</td>
                        <td class="table-action">
                            <a asp-action="DeleteOrder" asp-route-id="@orderViewModel.Id"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

