@{
    ViewData["Title"] = "Strona główna";
}

<div class="slider-area ">
    @if (ViewData["confirmed"] == "false")
    {
        <div class="alert alert-@ViewData["Alert"] alert-dismissible fade show" role="alert">
            @ViewData["Message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="slider-active">
        <!-- Single Slider -->
        <div class="single-slider slider-height d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 col-lg-9">
                        <div class="hero__caption">
                            <h1 style="text-transform: none">Najlepsza <span>Giełda</span> ładunków w Europie!</h1>
                        </div>
                        <div>
                            <a href="#" class="btn header-btn">Sprawdź nas już dziś !</a>
                        </div>
                        <!-- Hero Pera -->
                        <div class="hero-pera">
                            <p>Pierwszy miesiąc za darmo !</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--? Categories Area Start -->
<div class="categories-area section-padding30">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Section Tittle -->
