@using abcclicktrans.Data.Models
@using Microsoft.OpenApi.Extensions
@model IEnumerable<abcclicktrans.Data.Models.Vehicle>
@{
    ViewData["Title"] = "Lista pojazdów";
}

<div class="slider-area ">
    <div class="hero-overly slider-height2 d-flex align-items-center" data-background="~/assets/img/hero/about.jpg">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap">
                        <h2>Moje Pojazdy</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row pt-30 pb-20">
        <div class="col-md-3 col-sm-6">
            <a asp-action="AddVehicle" class="btn header-btn">Dodaj pojazd</a>
        </div>
    </div>
    <div class="row">
        <div class="card-deck pb-20">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    Nie posiadasz dodanego pojazdu.
                </div>
            }
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                @item.Name
                            </h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text">Rocznik: @item.Year</p>

                            <small class="text-muted">Dodany: @item.TimeStamp.ToShortDateString() </small>
                        </div>
                        <div class="card-footer">
                            <a asp-action="EditVehicle" type="button" class="btn btn-dark p-3" asp-route-id="@item.Id">Edytuj</a>
                            <a asp-action="DeleteVehicle" type="button" class="btn btn-secondary p-3" asp-route-id="@item.Id">Usuń</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>