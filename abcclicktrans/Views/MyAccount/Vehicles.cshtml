@model IEnumerable<abcclicktrans.Data.Models.Vehicle>
@{
    ViewData["Title"] = "Lista pojazdów";
}

<div class="slider-area ">
    <div class="hero-overly slider-height2 d-flex align-items-center" data-background="~/assets/img/hero/about.jpg">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap">
                        <h2>Moje Pojazdy</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row pt-30 pb-20">
        <div class="col-md-3 f-right">
            <a asp-action="AddVehicle" class="btn header-btn">Dodaj pojazd</a>
        </div>
    </div>
    <div class="row">
        <div class="card-deck">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    Nie posiadasz dodanego pojazdu.
                </div>
            }
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.VehicleType.ToString()</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">Rocznik: @item.Year</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Dodany: @item.TimeStamp.ToShortDateString()  |   </small>
                        <button type="button" class="btn btn-dark">Edytuj</button>
                        <button type="button" class="btn btn-secondary">Usuń</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>