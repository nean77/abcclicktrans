@model abcclicktrans.Data.Models.Vehicle

@{
    ViewData["Title"] = "DeleteVehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.AntiForgeryToken()
<section class="contact-form-area section-bg pt-50 pb-40 fix" data-background="~/assets/img/gallery/section_bg02.jpg">
    <div class="container">
        <div class="col-xl-8 col-lg-9">
            <div class="contact-form-wrapper">
                <section>
                    <h2>Usuń pojazd</h2>
                    <h3>Czy jesteś pewien, że chcesz usunąć pojazd?</h3>
                    <hr />
                    <dl class="row">
                        @Html.HiddenFor(model=>model.Id)
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.VehicleType)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.VehicleType)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Year)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Year)
                        </dd>
                    </dl>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Usuń" class="btn btn-danger" /> 
                        <a asp-action="Vehicles"class="btn btn-info">Powrót</a>
                    </form>
                </section>
            </div>
        </div>
    </div>
</section>